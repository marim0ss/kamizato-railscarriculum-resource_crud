<h1>ユーザー一覧画面</h1>

<% @users.each do |user| %>
  <p>
    <%= user.name %>
    <%= user.age %>
    <%= link_to "編集", edit_user_path(user.id) %>
    <%= link_to "削除", user_path(user.id),  # (user.id)...オブジェクトで(user)を渡すでも良い
                        method: :delete, data: {confirm: "このユーザーを削除しますか？"} %>
  </p>
<% end %>


<%= link_to "新規登録へ", new_user_path %>
